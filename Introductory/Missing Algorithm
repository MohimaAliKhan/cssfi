
#include <stdio.h>

int main() {
    int n,res;
    scanf("%d",&n);
     int arr[n-1];
     for(int i=0;i<n-1;i++){
         scanf("%d",&arr[i]);
     }
    for(int i=1;){
        
        if(n%2==0){
